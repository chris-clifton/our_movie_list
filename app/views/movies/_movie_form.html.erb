<%= form_for(@movie) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label "Movie Poster" %>
  <%= f.file_field :poster %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>